{
    "openapi": "3.0.0",
    "info": {
        "title": "Api Agenda Documentacao", 
        "description": "Api Agenda",
        "version": "1.5",
        "contact": {
            "email": "amandalfs57@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": ["users"],
                "sumary": "criacao usuarios",
                "description": "Criacao de um novo usuario",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties": {
                                    "name": {
                                        "type": "string"    
                                    },
                                    "email":{
                                        "type": "string"
                                    }, 
                                    "senha":{
                                        "type": "string"
                                    }
                                },
                                "example":{
                                    "name": "userTest",
                                    "email": "user@test.com",
                                    "senha": "user#123.Test"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201":{
                        "description": "Conta Criada Com sucesso"
                    }, 
                    "401": {
                        "description": "uma conta com o email ja existe"
                    }
                }
            },
            "get": {
                "tags": ["users"],
                "sumary": "Login de usuario",
                "description": "verificação para ver se o usuario é ele mesmo para entrar no seus contatos",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "email":{
                                    "type": "string"
                                },
                                "senha":{
                                    "type": "string"
                                },
                                "example":{
                                    "name":"user@test.com",
                                    "senha":"user#123.Test"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201":{
                        "description":"id_user:  15"
                    },
                    "401": {
                        "description": "usuario nao tem uma conta"
                    }
                }
            }
        },
        "/contacts":{
            "post":{
                "tags": ["contacts"],
                "sumary": "Criacao de Contato",
                "description": "criacaocao de um contato novo de acordo com usuario",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"string"
                                    },
                                    "telefone":{
                                        "type":"string"
                                    },
                                    "id_user":{
                                        "type": "number"
                                    }
                                },
                                "example":{
                                    "name": "User",
                                    "email": "user@test.com",
                                    "telefone": "(33) 3333-3333",
                                    "id_user": 5
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "criado com sucesso"
                    }
                }
            },
            "get":{
                "tags":["contacts"],
                "sumary":"Lista de contatos",
                "description": "lista de contatos por id de usuario",
                 "requestBody":{
                    "content":{
                        "application/json": {
                            "schema": {
                                "type":"object",
                                "properties":{
                                    "id_user":{
                                        "type":"number"
                                    }
                                },
                                "example": {
                                    "id_user":5
                                }
                            }
                        }
                    }
                 },
                 "responses":{
                    "200":{
                        "description": "Contatos:[lista]"
                    }
                }
            }
        }
    }
}